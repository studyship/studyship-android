<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/spacing_normal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/my_study_selector"
    android:paddingStart="@dimen/spacing_mini"
    android:paddingTop="@dimen/spacing_small"
    android:paddingBottom="@dimen/spacing_small"
    android:paddingEnd="@dimen/spacing_large">

    <TextView
        android:layout_marginStart="@dimen/spacing_normal"
        android:id="@+id/filter_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/main_color_white"
        android:textStyle="bold"
        tools:text="타이틀" />

    <TextView
        android:layout_marginEnd="@dimen/spacing_normal"
        android:id="@+id/filter_count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/filter_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/spacing_mini"
        android:layout_height="wrap_content"
        android:textColor="@color/main_color_white"
        android:textStyle="bold"
        tools:text="5개" />
</androidx.constraintlayout.widget.ConstraintLayout>