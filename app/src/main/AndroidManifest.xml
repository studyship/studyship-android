<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studyship.application">

    <application
        android:name=".StudyShipApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.TemporaryStudyActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ui.activity.CreateStudyActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ui.activity.SearchActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ui.activity.SignInActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ui.activity.StudyApplyActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".ui.splash.SplashActivity" />
        <activity
            android:name=".ui.activity.AddStudyActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>